}

@keyframes gelembung {
 0% {
  transform:translateY(0%);
  opacity:1;
 }
 
 99% {
  transform:translateY(-3200%);
  opacity:1;
 }

 100% {
  transform:translateY(-3200%);
  opacity:0;
 }
}

@keyframes anima {
 0% {
  opacity:1;
  color:lightskyblue;
  transition:1s;
 }

 50% {
  opacity:0;
  color:cyan;
}

 100% {
  opacity:1;
  color:skyblue;
  transition:1s;
}
